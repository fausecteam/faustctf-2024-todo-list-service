<div id="importModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>Upload a File</h2>
        <form id="importForm" enctype="multipart/form-data" data-modal-id="importModal" method="POST" action="/Todo/Import">
            <input type="file" id="fileInput" name="file" required>
            <button type="submit" class="btn btn-primary margin-box">Upload</button>
        </form>
    </div>
</div>